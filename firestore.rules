rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /reports/{reportId} {
      // Only logged-in staff can create reports under their own UID.
      allow create: if request.auth != null
        && request.resource.data.createdByUid == request.auth.uid;

      // Shared clinic access: any logged-in staff can read reports.
      allow read: if request.auth != null;

      // Shared clinic access: allow any logged-in staff to update/delete reports,
      // but prevent changing the original creator UID.
      allow update, delete: if request.auth != null
        && request.resource.data.createdByUid == resource.data.createdByUid;
    }

    // Clinic settings (logo, address, colors, etc.)
    // Make settings VISIBLE to any logged-in user.
    match /clinicSettings/{docId} {
      // Anyone logged in can read clinic settings (including legacy per-UID docs and shared).
      allow read: if request.auth != null;

      // Anyone logged in can write the shared doc; legacy per-UID writes remain restricted.
      allow write: if request.auth != null
        && (docId == 'shared' || request.auth.uid == docId);

      // Legacy per-UID subcollection (old behavior). Leave as-is for now.
      match /audiologists/{legacyDocId} {
        // Make legacy audiologists VISIBLE to any logged-in user, but only owner can write.
        allow read: if request.auth != null;
        allow write: if request.auth != null && request.auth.uid == docId;
      }
    }

    // Shared clinic audiologists list (used for signing / templates across logins)
    match /audiologists/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}


