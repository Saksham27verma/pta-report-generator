rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /reports/{reportId} {
      // Only logged-in staff can create reports under their own UID.
      allow create: if request.auth != null
        && request.resource.data.createdByUid == request.auth.uid;

      // Shared clinic access: any logged-in staff can read reports.
      allow read: if request.auth != null;

      // Shared clinic access: allow any logged-in staff to update/delete reports,
      // but prevent changing the original creator UID.
      allow update, delete: if request.auth != null
        && request.resource.data.createdByUid == resource.data.createdByUid;
    }

    // Per-staff clinic branding/settings (logo, address, colors, etc.)
    match /clinicSettings/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;

      match /audiologists/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }
  }
}


